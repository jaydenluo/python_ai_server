# Python AI开发框架环境配置

# 应用配置
APP_NAME=AI Framework
APP_VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000
WORKERS=1

# 环境配置
ENVIRONMENT=development

# 数据库配置
# 支持多种数据库类型: postgresql, mysql, sqlite, mongodb, oracle, sqlserver
DB_TYPE=postgresql

# 数据库URL (优先级最高)
# PostgreSQL: postgresql://user:password@host:port/database
# MySQL: mysql://user:password@host:port/database
# SQLite: sqlite:///path/to/database.db
# MongoDB: mongodb://user:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_framework

# 基础数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_framework
DB_USER=postgres
DB_PASSWORD=password

# SQLite 特殊配置
SQLITE_PATH=database.db

# MongoDB 特殊配置
MONGODB_AUTH_SOURCE=admin
MONGODB_AUTH_MECHANISM=SCRAM-SHA-1

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 安全配置
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=300

# AI配置
MODEL_STORAGE_PATH=./models
MAX_MODEL_SIZE=1073741824
SUPPORTED_FORMATS=pkl,joblib,onnx,pt
INFERENCE_TIMEOUT=30
MAX_BATCH_SIZE=100

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# 限流配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_REQUESTS_PER_DAY=10000
RATE_LIMIT_BURST_LIMIT=100

# 缓存配置
CACHE_DRIVER=redis
CACHE_PREFIX=ai_framework
CACHE_TTL=3600

# 文件存储配置
STORAGE_DRIVER=local
STORAGE_PATH=./storage
MAX_FILE_SIZE=104857600
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,txt,csv

# 邮件配置
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-password
MAIL_FROM=your-email@gmail.com
MAIL_FROM_NAME=AI Framework

# 监控配置
MONITORING_ENABLED=true
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# 开发配置
RELOAD=true
LOG_LEVEL=debug
DEBUG_TOOLBAR=true